    "nodemailer": "^6.4.10",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "eslint": "^7.5.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-react": "^7.20.3",
    "nodemon": "^2.0.4"
  }
